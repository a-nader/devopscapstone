{
"kind":"ReplicationController",
    "apiVersion":"v1",
         "metadata":{
                "name":"blue",
                "labels":{
                      "app":"blue"
                   }
               },
          "spec":{
              "replicas":1,
              "selector":{
                   "app":"blue"
                     },
              "template":{
                   "metadata":{
                       "labels":{
                       "app":"blue"
                           }
                   },
                   "spec":{
                       "containers":[
                       {
                        "name":"blue",
                        "imagePullPolicy":"Always",
                        "image":"anadersalem/devopscapstone-pro:latest",
                        "ports":[
                        {
                                 "name":"http-server",
                                 "containerPort":80
                        }]
                 }]
              }
            }
       }
}

