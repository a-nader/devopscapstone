pipeline {
    agent any 
    stages {
        stage('Validating prequisites') {
            steps {
                echo 'Testing prequisites... ' 
                sh("aws --version")
                withAWS(region:'us-west-2', credentials:'awsnew') 
                   {
                    sh '''
                        /usr/local/bin/eksctl version
#						/usr/local/bin/kubectl version --short
                       '''
                   }
               }
        }
		
		stage('Creating eks stack cluster') {
			steps {
				 dir ('/home/ec2-user/capstone'){
				withAWS(region:'us-west-2', credentials:'awsnew') 
                   {
				  
                    		sh '''
				/usr/local/bin/eksctl  create cluster --name capstone-project --nodegroup-name projectgroup --region us-west-2 --node-type t2.small --nodes 2 --nodes-min 1 --nodes-max 2 --ssh-access --ssh-public-key id_rsa.pub --managed --auto-kubeconfig
                       		'''
					
				sh '''
				aws eks update-kubeconfig --name capstone-project
				/usr/local/bin/kubectl get svc
				/usr/local/bin/kubectl get nodes
				  '''
				   }
				   }
		
		
		
				}
		
		}
		}
}
